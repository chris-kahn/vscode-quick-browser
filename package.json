{
    "name": "tiller",
    "displayName": "Tiller",
    "repository": {
        "type": "git",
        "url": "https://github.com/chris-kahn/vscode-tiller"
    },
    "description": "A Helm-like file browser for VS Code",
    "version": "1.6.2",
    "publisher": "maplefactory",
    "icon": "images/icon.png",
    "engines": {
        "vscode": "^1.48.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:tiller.show"
    ],
    "license": "GPL-3.0-only",
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "tiller.show",
                "title": "Tiller"
            },
            {
                "command": "tiller.back",
                "title": "Tiller - Up a directory"
            },
            {
                "command": "tiller.forward",
                "title": "Tiller - Open directory or file"
            },
            {
                "command": "tiller.toggleHidden",
                "title": "Tiller - Toggle Hidden Files"
            }
        ],
        "keybindings": [
            {
                "command": "tiller.show",
                "key": "alt+p",
                "mac": "ctrl+p"
            },
            {
                "command": "tiller.back",
                "key": "left",
                "mac": "left",
                "when": "!editorTextFocus"
            },
            {
                "command": "tiller.forward",
                "key": "right",
                "mac": "right",
                "when": "!editorTextFocus"
            },
            {
                "command": "tiller.toggleHidden",
                "key": "alt+.",
                "mac": "ctrl+.",
                "when": "!editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "vscode-tiller configuration",
            "properties": {
                "vscode-tiller.showCurrentDirectory": {
                    "type": "boolean",
                    "description": "Whether to show '. (current)'",
                    "default": false
                },
                "vscode-tiller.openCurrentDirectoryAction": {
                    "type": "string",
                    "description": "Action to take when selecting '. (current)'",
                    "enum": [
                        "none",
                        "open in same window",
                        "open in new window",
                        "open new folder in same window"
                    ],
                    "default": "open new folder in same window"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "pretest": "yarn run compile && yarn run lint",
        "test": "node ./out/test/index.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^8.0.0",
        "@types/node": "^14.0.27",
        "@types/vscode": "^1.48.0",
        "@typescript-eslint/eslint-plugin": "^3.8.0",
        "@typescript-eslint/parser": "^3.8.0",
        "eslint": "^7.8.1",
        "glob": "^7.1.4",
        "mocha": "^8.1.3",
        "typescript": "^4.0.2",
        "vscode-test": "^1.4.0"
    }
}
